<%= form_with model: coupon do |form| %>
  <div>
    <%= form.label :coupon_code %><br>
    <%= form.text_field :coupon_code %>
    <% coupon.errors.full_messages_for(:coupon_code).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :store %><br>
    <%= form.text_area :store %><br>
    <% coupon.errors.full_messages_for(:store).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Submit Coupon" %>
  </div>
<% end %>

<%= link_to "Home", root_path %>
